<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/hopper_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hopper"
        android:textStyle="bold"
        android:textSize="34sp"
        android:textColor="@color/hopper_peach"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053" />

    <TextView
        android:id="@+id/price_drops_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Unlock Exclusive Price Drops!"
        app:layout_constraintTop_toBottomOf="@id/hopper_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/search_for"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Search For"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/price_drops_label"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.20" />

    <TextView
        android:id="@+id/hotels_with_flexible_cancellation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hotels with flexible cancellation policies are discounting\n
         stays later this year by up to 50%"
        app:layout_constraintStart_toStartOf="@id/view_discounts"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.20"
        app:layout_constraintTop_toBottomOf="@id/price_drops_label"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />

    <Button
        android:id="@+id/view_discounts"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:backgroundTint="@color/sky_blue"
        android:text="View Discounts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hotels_with_flexible_cancellation" />


    <Button
        android:id="@+id/Flights"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/black"
        android:text="Doggy flights"
        android:textColor="@color/sky_blue"
        app:layout_constraintEnd_toEndOf="@id/search_for"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/search_for"
        app:layout_constraintVertical_bias="0.20"
        app:layout_constraintTop_toBottomOf="@id/search_for" />


    <Button
        android:id="@+id/Hotels"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Doggy Hotels"

        android:backgroundTint="@color/black"
        android:textColor="@color/sky_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.60"
        app:layout_constraintStart_toStartOf="@id/Flights"
        app:layout_constraintVertical_bias="0.20"
        app:layout_constraintTop_toBottomOf="@id/search_for" />


    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="191dp"
        android:layout_height="146dp"
        android:layout_marginTop="544dp"
        android:src="@drawable/corgi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>